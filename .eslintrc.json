{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module",
    "impliedStrict": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "strict": ["error", "global"],
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "parser": "flow", "semi": false }
    ]
  }
}
